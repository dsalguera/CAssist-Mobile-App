<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logo_login"
    tools:context=".Interfaces.Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo" />


    <EditText
        android:id="@+id/txtusuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_circled_user_male"
        android:layout_gravity="center"
        android:drawablePadding="7dp"
        android:background="@drawable/edittext_rounded"
        android:padding="5dp"


        android:textSize="15dp"
        android:ems="10"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="10dp"

        android:hint="Nombre de Usuario"/>

    <EditText
        android:id="@+id/txtpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:drawableLeft="@drawable/ic_lock"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_rounded"
        android:ems="10"
        android:drawablePadding="7dp"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:padding="5dp"

        android:textSize="15dp" />

    <Button
        android:id="@+id/btnIniciarSes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/btn"
        android:text="Iniciar Sesión"
        android:textAllCaps="false"
        android:textColor="@color/blanco" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:textColor="@color/blanco"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="Registrarse" />


    <TextView
        android:id="@+id/visitanos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="17dp"
        android:text="Visite nuestra Página Web aquí."
        android:drawableLeft="@drawable/ic_hand_right"
        android:drawableRight="@drawable/ic_globe"
        android:textColor="@color/blanco"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"
            android:text="Todos los derechos reservados, CodeBrainers TM 2019."
            android:textColor="@color/blanco"/>
    </RelativeLayout>




</LinearLayout>