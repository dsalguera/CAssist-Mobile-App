<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Interfaces.PrevisualizarPublicacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/logo_35"
            android:tint="#FFF">

        </ImageView>

        <TextView
            android:id="@+id/tituloPrev1"

            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_weight="0.20"
            android:ems="10"


            android:paddingStart="18dp"
            android:text="Info. Publicación"
            android:textColor="@color/blanco"
            android:textColorHint="#c1c1c1"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/quitarFav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_unpin_2"/>

        <ImageView
            android:id="@+id/closePubPrevF"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/close_window"/>


    </LinearLayout>

    <ImageView

        android:id="@+id/imagenPrevF"
        android:layout_width="match_parent"
        android:layout_height="220dp"

        android:scaleType="fitXY"
        android:background="#C1C1C1"
        android:layout_alignParentTop="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/tituloPrevF"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_view_details"
            android:drawablePadding="5dp"
            android:layout_weight="0.20"
            android:ems="10"
            android:layout_gravity="left"

            android:text="Nueva Publicación"
            android:textColor="@color/blanco"
            android:textColorHint="#c1c1c1"
            android:textSize="20dp" />


    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">



            <TextView
                android:id="@+id/desc_prevF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:layout_marginTop="15dp"
                android:padding="10sp"
                android:textSize="18dp"
                android:layout_marginHorizontal="25dp"
                android:drawableLeft="@drawable/ic_create_new_24"

                android:drawablePadding="5dp"
                android:text="Descripcion" />

            <TextView
                android:id="@+id/direccion_prevF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:textSize="18dp"
                android:layout_marginHorizontal="25dp"
                android:drawableLeft="@drawable/ic_map_24"

                android:drawablePadding="5dp"
                android:text="Direccion" />

            <TextView
                android:id="@+id/telefono_prevF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:textSize="18dp"
                android:background="@drawable/button_rounded"
                android:drawableLeft="@drawable/ic_phone_office_24"

                android:drawablePadding="5dp"
                android:layout_marginHorizontal="25dp"
                android:text="Telefono" />

            <TextView
                android:id="@+id/email_prevF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:textSize="18dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/button_rounded"
                android:drawableLeft="@drawable/ic_mail_24"
                android:drawablePadding="5dp"
                android:text="Email" />

            <TextView
                android:id="@+id/creacion_prevF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:textSize="18dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/button_rounded"
                android:drawableLeft="@drawable/ic_today_24"
                android:drawablePadding="5dp"
                android:text="Fecha de Creacion" />

            <TextView
                android:id="@+id/id_usuarioF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:textSize="18dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/button_rounded"
                android:drawableLeft="@drawable/ic_contact_card_24"
                android:drawablePadding="5dp"

                android:text="ID Usuario" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:gravity="center"

                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnEnviarCorreoF"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:drawableLeft="@drawable/ic_send_24"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn"
                    android:padding="10dp"

                    android:text="Enviar Correo"

                    android:textAllCaps="false"
                    android:textColor="@color/blanco" />

                <Button
                    android:id="@+id/btnLlamarF"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_call_24"
                    android:padding="10dp"
                    android:background="@drawable/btn"
                    android:textColor="@color/blanco"
                    android:textAllCaps="false"

                    android:layout_alignParentBottom="true"


                    android:text="Llamar contacto"/>



            </LinearLayout>



        </LinearLayout>


    </ScrollView>




</LinearLayout>