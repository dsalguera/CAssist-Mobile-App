<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Interfaces.Perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/logo_35"
            android:tint="#FFF">

        </ImageView>

        <TextView
            android:id="@+id/fecha_creacion"

            android:layout_width="0dp"
            android:layout_height="45.0dip"
            android:layout_weight="0.20"
            android:textAlignment="center"

            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="#c1c1c1"

            android:textColor="@color/blanco"
            android:text="Fecha de Creación: 23-09-2019"
            android:textSize="20dp"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo">

        <ImageView
            android:id="@+id/perfilImagen"
            android:background="@drawable/button_rounded"
            android:layout_marginHorizontal="35dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/lbluser"
            android:background="@drawable/button_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_user_credentials"
            android:paddingLeft="10dp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="7dp"
            android:textSize="18dp"
            android:text="nombre usuario" />

        <TextView
            android:id="@+id/lblcorreo"
            android:background="@drawable/button_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="15dp"

            android:drawableLeft="@drawable/ic_email"
            android:paddingLeft="10dp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:text="correo usuario" />

        <TextView
            android:id="@+id/todoNombre"
            android:background="@drawable/button_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:textSize="17dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_instapaper"
            android:paddingLeft="10dp"
            android:padding="10dp"
            android:drawablePadding="5dp"

            android:text="David Alberto Salguera Miranda" />

        <TextView
            android:id="@+id/celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="15dp"
            android:text="Celular: +505 7779 0422"
            android:drawableLeft="@drawable/ic_phone_android"
            android:paddingLeft="10dp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/telefono"
            android:background="@drawable/button_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_phone_office_24"
            android:paddingLeft="10dp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:text="Teléfono: +505 2248 4598" />

        <TextView
            android:id="@+id/nacimiento"
            android:background="@drawable/button_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_birthday_24"
            android:paddingLeft="10dp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:text="Fecha Nacimiento: 23/09/1999" />

        <Button
            android:id="@+id/btnCerrarSesionAbierta"
            android:background="@drawable/btn"
            android:textColor="@color/blanco"
            android:textAllCaps="false"


            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Cerrar Sesión" />

    </LinearLayout>

</LinearLayout>