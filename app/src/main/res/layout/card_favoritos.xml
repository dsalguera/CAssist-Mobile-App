<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"

    card_view:cardBackgroundColor="#F6F6F6"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="0dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:scaleType="fitXY">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="0dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="105dp"
            android:id="@+id/item_imageF"
            android:src="@drawable/ic_bookmark"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:layout_marginRight="10dp">

        </ImageView>

        <TextView
            android:id="@+id/item_titleF"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_imageF"
            android:layout_toRightOf="@+id/item_imageF"
            android:text="Nombre de Publicacion"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_descF"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_below="@+id/item_titleF"
            android:layout_toEndOf="@+id/item_imageF"
            android:layout_toRightOf="@+id/item_imageF"
            android:text="Aqui va la descripcion"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_descF"
            android:layout_toEndOf="@+id/item_imageF"
            android:layout_toRightOf="@+id/item_imageF"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_creacionF"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:drawableLeft="@drawable/ic_today_20"
                android:gravity="center"
                android:textColor="@color/negro"
                android:drawablePadding="-8dp"
                android:layout_below="@+id/item_descF"
                android:layout_toEndOf="@+id/item_imageF"
                android:layout_toRightOf="@+id/item_imageF"
                android:text="2019-11-23"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/item_usuarioF"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:drawableLeft="@drawable/ic_user_20"
                android:gravity="center_vertical"
                android:drawablePadding="4dp"
                android:layout_toStartOf="@id/item_creacionF"
                android:layout_toEndOf="@+id/item_imageF"
                android:layout_toRightOf="@+id/item_imageF"
                android:text="dsalguera"
                android:textSize="15sp"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>