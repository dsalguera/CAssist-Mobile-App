<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <stroke
                android:height="1.0dip"
                android:width="1.0dip"
                android:color="@color/rojoOscuro" />

            <solid android:color="@color/rojoOscuro" />

            <corners
                android:bottomLeftRadius="102.0dip"
                android:bottomRightRadius="102.0dip"
                android:radius="102.0dip"
                android:topLeftRadius="102.0dip"
                android:topRightRadius="102.0dip" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <stroke
                android:height="1.0dip"
                android:width="1.0dip"
                android:color="@color/rojoOscuro" />

            <solid android:color="@color/rojoOscuro" />

            <corners
                android:bottomLeftRadius="102.0dip"
                android:bottomRightRadius="102.0dip"
                android:radius="102.0dip"
                android:topLeftRadius="102.0dip"
                android:topRightRadius="102.0dip" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:height="1.0dip"
                android:width="1.0dip"
                android:color="@color/rojo" />

            <solid android:color="@color/rojo" />

            <corners
                android:bottomLeftRadius="102.0dip"
                android:bottomRightRadius="102.0dip"
                android:radius="102.0dip"
                android:topLeftRadius="102.0dip"
                android:topRightRadius="102.0dip" />
        </shape>
    </item>

</selector>

